{
  "name": "pine-project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "scripts": {
    "lerna": "lerna",
    "build": "npm run build:babel && npm run build:types",
    "build:babel": "lerna exec --parallel -- babel --root-mode upward src -d dist/cjs --extensions .ts,.tsx",
    "build:types": "lerna exec --parallel -- tsc",
    "pine:prod": "./packages/pine/bin/pine",
    "pine:dev": "PINE_ENV=development ts-node --project ./packages/pine/tsconfig.json ./packages/pine/bin/pine",
    "format": "prettier --write 'packages/**/src/**/*.ts' packages/**/test/**/*.ts",
    "lint": "eslint packages/**/src --ext .ts",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "author": "Fredrik Forsmo <fredrik.forsmo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.12.0",
    "@babel/preset-typescript": "^7.12.0",
    "@jitesoft/babel-preset-main": "^2.5.4",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.5.2",
    "core-js": "^3.6.5",
    "eslint": "^7.11.0",
    "jest": "^26.5.3",
    "lerna": "^3.3.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "semistandard": "^14.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "minimist": "^1.2.5"
  },
  "semistandard": {
    "parser": "babel-eslint"
  },
  "pine": {}
}
