{
  "name": "pine-project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "scripts": {
    "lerna": "lerna",
    "build": "lerna exec --parallel -- tsc",
    "pine:test": "jest",
    "pine:prod": "./packages/pine/bin/pine",
    "pine:dev": "PINE_ENV=development ts-node ./packages/pine/bin/pine",
    "format": "prettier --write 'packages/**/src/**/*.ts' packages/**/test/**/*.ts",
    "lint": "eslint packages/**/src --ext .ts",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "author": "Fredrik Forsmo <fredrik.forsmo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.15",
    "@types/yargs": "15.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "26.6.3",
    "eslint": "^7.14.0",
    "jest": "26.6.3",
    "lerna": "^3.3.2",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "semistandard": "^16.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "semistandard": {
    "parser": "babel-eslint"
  },
  "pine": {
    "silent": true
  },
  "dependencies": {}
}
