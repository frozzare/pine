{
  "name": "pine-project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "scripts": {
    "lerna": "lerna",
    "build": "npm run clean && npm run compile",
    "compile": "lerna exec --stream -- tsc",
    "clean": "lerna exec --stream -- rm -rf ./dist tsconfig.tsbuildinfo",
    "pine:prod": "./packages/pine/bin/pine",
    "pine:dev": "PINE_ENV=development ts-node ./packages/pine/bin/pine",
    "format": "prettier --write 'packages/**/src/**/*.ts' packages/**/test/**/*.ts",
    "lint": "eslint packages/**/src --ext .ts",
    "prepublish": "npm run build",
    "test": "yarn pine:dev test",
    "ci": "npm run lint && npm run pine:prod test"
  },
  "author": "Fredrik Forsmo <fredrik.forsmo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.21",
    "@types/yargs": "16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-jest": "26.6.3",
    "eslint": "^7.22.0",
    "jest": "26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semistandard": "^16.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "semistandard": {
    "parser": "@babel/eslint-parser"
  },
  "pine": {
    "silent": false
  }
}
