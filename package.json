{
  "name": "pine-project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "scripts": {
    "lerna": "lerna",
    "build": "lerna exec --parallel -- tsc",
    "pine:test": "jest",
    "pine:prod": "./packages/pine/bin/pine",
    "pine:dev": "PINE_ENV=development ts-node ./packages/pine/bin/pine",
    "format": "prettier --write 'packages/**/src/**/*.ts' packages/**/test/**/*.ts",
    "lint": "eslint packages/**/src --ext .ts",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "author": "Fredrik Forsmo <fredrik.forsmo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.2",
    "eslint": "^7.11.0",
    "jest": "^26.5.3",
    "lerna": "^3.3.2",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "semistandard": "^14.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "semistandard": {
    "parser": "babel-eslint"
  },
  "pine": {
    "silent": true
  }
}
